---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
          {% endif %}
          {% if page.profile.random %}
            <div class="profile-photo-container" style="position: relative;">
              {% for photo in site.profile_photos %}
                <figure class="profile-photo-figure" style="display: none; margin: 0;" data-rarity="{{ photo.rarity | default: 'common' }}">
                  <img
                    src="/assets/img/pfp/{{ photo.file }}"
                    class="{{ profile_image_class }}"
                    alt="Profile photo"
                  >
                  {% if photo.caption and photo.caption != "" %}
                    <figcaption class="profile-photo-caption">{{ photo.caption }}</figcaption>
                  {% endif %}
                </figure>
              {% endfor %}
            </div>

            <script>
              (function() {
                // 60% common, 30% rare, 10% secret
                const tierWeights = { common: 60, rare: 30, secret: 10 };
                const figures = document.querySelectorAll('.profile-photo-figure');
                const container = document.querySelector('.profile-photo-container');
                if (figures.length > 0) {
                  // Group photos by tier
                  const tiers = { common: [], rare: [], secret: [] };
                  figures.forEach((fig, idx) => {
                    const rarity = fig.dataset.rarity || 'common';
                    if (tiers[rarity]) tiers[rarity].push(idx);
                  });

                  function pickPhoto() {
                    // Hide all
                    figures.forEach(fig => fig.style.display = 'none');
                    // Pick a tier (weighted), falling back if tier is empty
                    const roll = Math.random() * 100;
                    let selectedTier;
                    if (roll < tierWeights.secret && tiers.secret.length > 0) {
                      selectedTier = 'secret';
                    } else if (roll < tierWeights.secret + tierWeights.rare && tiers.rare.length > 0) {
                      selectedTier = 'rare';
                    } else {
                      selectedTier = 'common';
                    }
                    // Pick random photo within the tier
                    const pool = tiers[selectedTier];
                    const selectedIdx = pool[Math.floor(Math.random() * pool.length)];
                    figures[selectedIdx].style.display = 'block';
                  }

                  // Initial pick
                  pickPhoto();
                  // Click to reroll
                  container.style.cursor = 'pointer';
                  container.addEventListener('click', pickPhoto);
                }
              })();
            </script>
          {% else %}
            <img src="{{ page.profile.image | prepend: '/assets/img/' | relative_url }}" alt="Profile photo" class="{{ profile_image_class }}">
          {% endif %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- News -->
    {% if page.announcements and page.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">news</a>
      </h2>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
